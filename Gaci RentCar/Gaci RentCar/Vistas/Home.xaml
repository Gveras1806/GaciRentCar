                        <Label Text="Cobertura del seguro" FontSize="Small" Grid.Column="1" Grid.Row="3" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" TextColor="#1c1d21" FontAttributes="Bold"/>

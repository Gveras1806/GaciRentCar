                        <Label Text="Matricula al dia" FontSize="Small" Grid.Column="1" Grid.Row="3" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" TextColor="#1c1d21" FontAttributes="Bold"/>

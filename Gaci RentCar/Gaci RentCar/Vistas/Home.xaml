                        <Label Text="Desde" FontSize="Small" Grid.Column="0" Grid.Row="7" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" TextColor="#1c1d21" FontAttributes="Bold"/>
                        <Label Text="$2000" FontSize="30" Grid.Column="0" Grid.Row="7" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" TextColor="#1f7c8e" FontAttributes="Bold"/>
                        <Label Text="Opciones de pago" FontSize="Small" Grid.Column="0" Grid.Row="7" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand" TextColor="#blue" FontAttributes="Bold"/>
                        <Image Source="Payment.png" WidthRequest="30" HeightRequest="24" Grid.Column="0" Grid.Row="7" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" Margin="0,0,30,0" />

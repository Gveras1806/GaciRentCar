                        <BoxView Grid.Row="2" Grid.ColumnSpan="2"
                          Color="#1c1d21" />
                        <Label Text="kilometraje ilimitado" FontSize="Small" Grid.Column="0" Grid.Row="3" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" TextColor="#1c1d21" FontAttributes="Bold"/>
                        <Image Source="Check.png" WidthRequest="25" HeightRequest="24" Grid.Column="0" Grid.Row="3" HorizontalOptions="EndAndExpand" VerticalOptions="StartAndExpand" Margin="0,0,20,0" />

                        <Label Text="Asegurado contra robo" FontSize="Small" Grid.Column="0" Grid.Row="3" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" TextColor="#1c1d21" FontAttributes="Bold"/>
